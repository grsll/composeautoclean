<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <!-- cdn_kendaraan list view -->
        <record id="cdn_kendaraan_view_list" model="ir.ui.view">
            <field name="name">cdn.kendaraan.view.list</field>
            <field name="model">cdn.kendaraan</field>
            <field name="arch" type="xml">
                <list>
                    <!-- Add your fields here -->
                    <field name="customer_name"/>
                    <field name="jenis_kendaraan"/>
                    <field name="customer_alamat"/>
                </list>
            </field>
        </record>

        <!-- cdn_kendaraan form view -->
        <record id="cdn_kendaraan_view_form" model="ir.ui.view">
            <field name="name">cdn.kendaraan.view.form</field>
            <field name="model">cdn.kendaraan</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="customer_id"/>
                            <field name="jenis_kendaraan"/>
                            <field name="customer_name"/>
                            <field name="customer_alamat"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- cdn_kendaraan action window -->
        <record id="cdn_kendaraan_action" model="ir.actions.act_window">
            <field name="name">cdn.kendaraan.action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.kendaraan</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                
                </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="kendaraan_menu_act" name="Kendaraan" parent="master_data_menu_categ" action="cdn_kendaraan_action" sequence="20"/>
    
    </data>
    

</odoo>
