<odoo>
    <data>
        <record id="module_category_auto_clean" model="ir.module.category">
            <field name="name">Auto Clean</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_auto_clean_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_auto_clean"/>
        </record>

        <record id="group_auto_clean_admin" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_auto_clean"/>
            <field name="implied_ids" eval="[(4, ref('group_auto_clean_user'))]"/>
        </record>
    </data>
</odoo>