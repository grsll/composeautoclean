<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>


        <record id="cdn_kendaraan_view_list" model="ir.ui.view">
            <field name="name">cdn.kendaraan.view.list</field>
            <field name="model">cdn.kendaraan</field>
            <field name="arch" type="xml">
                <list string="Daftar Kendaraan" decoration-muted="not active">
                    <field name="customer_id" widget="many2one_avatar"/>
                    <field name="jenis_kendaraan"/>
                    <field name="merk"/>
                    <field name="active" column_invisible="True"/>
                </list>
            </field>
        </record>


        <record id="cdn_kendaraan_view_form" model="ir.ui.view">
            <field name="name">cdn.kendaraan.view.form</field>
            <field name="model">cdn.kendaraan</field>
            <field name="arch" type="xml">
                <form string="Kendaraan">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>

                        <group>
                            <group string="Customer">
                                <field name="customer_id" options="{'no_create': True, 'no_open': False}" widget="many2one_avatar"/>
                                <field name="customer_telepon" options="{'enable_sms': False}"/>
                                <field name="customer_alamat" readonly="1"/>
                            </group>
                            <group string="Status">
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Daftar Kendaraan" name="vehicle_list_customer">
                                <field name="kendaraan_ids" context="{'default_customer_id': customer_id}">
                                    <list string="Daftar Kendaraan" decoration-muted="not active">
                                        <field name="nomor_kendaraan"/>
                                        <field name="jenis_kendaraan"/>
                                        <field name="merk"/>
                                        <field name="warna"/>
                                        <field name="catatan"/>
                                        <field name="active" column_invisible="True"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cdn_kendaraan_view_search" model="ir.ui.view">
            <field name="name">cdn.kendaraan.view.search</field>
            <field name="model">cdn.kendaraan</field>
            <field name="arch" type="xml">
                <search string="Cari Kendaraan">
                    <field name="nomor_kendaraan"/>
                    <field name="jenis_kendaraan"/>
                    <field name="merk"/>
                    <field name="customer_id"/>
                    <filter string="Aktif" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Terarsip" name="inactive" domain="[('active', '=', False)]"/>

                    <group expand="0" string="Group By">
                        <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}"/>
                        <filter string="Merk" name="group_merk" context="{'group_by': 'merk'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="cdn_kendaraan_action" model="ir.actions.act_window">
            <field name="name">Kendaraan Pelanggan</field>
            <field name="res_model">cdn.kendaraan</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="cdn_kendaraan_view_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Belum ada data kendaraan.</p>
            </field>
        </record>

        <menuitem id="kendaraan_menu_act" name="Kendaraan" parent="menu_master_data" action="cdn_kendaraan_action" sequence="20"/>
    </data>


</odoo>
