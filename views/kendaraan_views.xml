<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vehicle List View -->
        <record id="view_cdn_kendaraan_list" model="ir.ui.view">
            <field name="name">cdn.kendaraan.list</field>
            <field name="model">cdn.kendaraan</field>
            <field name="arch" type="xml">
                <list>
                    <field name="nomor_kendaraan"/>
                    <field name="jenis_kendaraan"/>
                    <field name="merk"/>
                    <field name="warna"/>
                    <field name="customer_id"/>
                </list>
            </field>
        </record>

        <!-- Vehicle Form View -->
        <record id="view_cdn_kendaraan_form" model="ir.ui.view">
            <field name="name">cdn.kendaraan.form</field>
            <field name="model">cdn.kendaraan</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="nomor_kendaraan" placeholder="B 1234 ABC"/>
                                <field name="jenis_kendaraan"/>
                                <field name="merk" placeholder="e.g. Toyota Avanza"/>
                            </group>
                            <group>
                                <field name="warna" placeholder="e.g. Hitam"/>
                                <field name="customer_id" options="{'no_open': True, 'no_create': True}"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>
                        <group string="Informasi Tambahan">
                            <field name="catatan"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vehicle Search View -->
        <record id="view_cdn_kendaraan_search" model="ir.ui.view">
            <field name="name">cdn.kendaraan.search</field>
            <field name="model">cdn.kendaraan</field>
            <field name="arch" type="xml">
                <search>
                    <field name="nomor_kendaraan"/>
                    <field name="merk"/>
                    <field name="customer_id"/>
                    <filter string="Mobil" name="mobil" domain="[('jenis_kendaraan', '=', 'mobil')]"/>
                    <filter string="Motor" name="motor" domain="[('jenis_kendaraan', '=', 'motor')]"/>
                    <filter string="Bus" name="bus" domain="[('jenis_kendaraan', '=', 'bus')]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="group_by_customer" context="{'group_by': 'customer_id'}"/>
                        <filter string="Jenis Kendaraan" name="group_by_jenis" context="{'group_by': 'jenis_kendaraan'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vehicle Action -->
        <record id="action_cdn_kendaraan" model="ir.actions.act_window">
            <field name="name">Kendaraan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.kendaraan</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_cdn_kendaraan_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tambah data kendaraan customer
                </p>
            </field>
        </record>

        <!-- Vehicle Menu Item -->
        <menuitem id="menu_cdn_kendaraan" name="Kendaraan" parent="menu_master_data" action="action_cdn_kendaraan" sequence="20"/>
    </data>
</odoo>
