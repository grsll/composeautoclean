<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_vehicle_list" model="ir.ui.view">
            <field name="name">compose_auto_clean.vehicle.list</field>
            <field name="model">compose_auto_clean.vehicle</field>
            <field name="arch" type="xml">
                <list string="Daftar Kendaraan" decoration-info="vehicle_type == 'mobil'" decoration-success="vehicle_type == 'motor'">
                    <field name="name"/>
                    <field name="vehicle_type" widget="badge" decoration-info="vehicle_type == 'mobil'" decoration-success="vehicle_type == 'motor'"/>
                    <field name="customer_id"/>
                    <field name="brand"/>
                    <field name="last_wash_date" string="Terakhir Cuci"/>
                    <field name="wash_count" string="Total Cuci" sum="Total Keseluruhan"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <record id="view_vehicle_form" model="ir.ui.view">
            <field name="name">compose_auto_clean.vehicle.form</field>
            <field name="model">compose_auto_clean.vehicle</field>
            <field name="arch" type="xml">
                <form string="Form Kendaraan">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_wash_orders" type="object" class="oe_stat_button" icon="fa-tint">
                                <div class="o_stat_info">
                                    <field name="wash_count" class="o_stat_value"/>
                                    <span class="o_stat_text">Riwayat Cuci</span>
                                </div>
                            </button>
                        </div>

                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>

                        <div class="oe_title">
                            <label for="name" string="Plat Nomor Kendaraan"/>
                            <h1>
                                <field name="name" placeholder="B 1234 ABC"/>
                            </h1>
                        </div>

                        <group>
                            <group string="Informasi Kendaraan">
                                <field name="vehicle_type" widget="radio" options="{'horizontal': true}"/>
                                <field name="brand" placeholder="Contoh: Toyota Avanza"/>
                                <field name="color" placeholder="Contoh: Putih"/>
                                <field name="active" invisible="1"/>
                            </group>
                            <group string="Data Pemilik &amp; Status">
                                <field name="customer_id" options="{'no_create': True}"/>
                                <field name="last_wash_date" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Riwayat Order" name="wash_history">
                                <field name="wash_order_ids" readonly="1">
                                    <list string="Daftar Cuci">
                                        <field name="name" string="No. Order"/>
                                        <field name="order_date" string="Tanggal"/>
                                        <field name="state" widget="badge" 
                                               decoration-success="state == 'done'" 
                                               decoration-info="state == 'draft'"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_vehicle_view" model="ir.actions.act_window">
            <field name="name">Kendaraan</field>
            <field name="res_model">compose_auto_clean.vehicle</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Belum ada kendaraan terdaftar.
                </p>
                <p>
                    Daftarkan kendaraan pelanggan untuk melacak riwayat cuci dan memberikan layanan terbaik.
                </p>
            </field>
        </record>

        <menuitem id="menu_vehicle_action" 
                  name="Kendaraan" 
                  parent="menu_master_data" 
                  action="action_vehicle_view" 
                  sequence="20"/>
    </data>

</odoo>
