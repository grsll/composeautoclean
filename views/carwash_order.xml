<odoo>
    <data>
        <record model="ir.ui.view" id="carwash_order_tree">
            <field name="name">carwash_order.list</field>
            <field name="model">compose_auto_clean.carwash_order</field>
            <field name="arch" type="xml">
                <list>
                    <field name="customer_id"/>
                    <field name="vehicle_id"/>
                    <field name="service_name"/>
                    <field name="price"/>
                    <field name="duration"/>
                    <field name="variant"/>
                    <field name="payment_status"/>
                    <field name="order_date"/>
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="carwash_order_form">
            <field name="name">carwash_order.form</field>
            <field name="model">compose_auto_clean.carwash_order</field>
            <field name="arch" type="xml">
                <form string="Pesanan Cuci Mobil">
                    <sheet>
                        <group>
                            <group string="Pelanggan &amp; Kendaraan">
                                <field name="customer_id" options="{'no_create': True}"/>
                                <field name="vehicle_id" options="{'no_create': True}"/>
                            </group>
                            <group string="Info Pesanan">
                                <field name="order_date"/>
                                <field name="payment_status" 
            decoration-success="payment_status == 'lunas'"
            decoration-info="payment_status == 'belum bayar'"/>
                            </group>
                        </group>
                        <group string="Detail Layanan">
                            <group>
                                <field name="service_name"/>
                                <field name="variant"/>
                            </group>
                            <group>
                                <field name="price"/>
                                <field name="duration" widget="float_time"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="carwash_order_action">
            <field name="name">Pesanan Cuci Mobil</field>
            <field name="res_model">compose_auto_clean.carwash_order</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem name="Pesanan Cuci" id="menu_carwash_orders" parent="menu_root"/>
        <menuitem name="Daftar Pesanan" id="menu_carwash_orders_list" parent="menu_carwash_orders" action="carwash_order_action"/>
    </data>
</odoo>