<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- carwash order list view -->
        <record id="carwash_order_view_list" model="ir.ui.view">
            <field name="name">carwash.order.view.list</field>
            <field name="model">carwash.order</field>
            <field name="arch" type="xml">
                <list>
                    <field name="partner_id"/>
                    <field name="vehicle_id"/>
                    <field name="nomor_kendaraan"/>
                    <field name="jenis_kendaraan"/>
                    <field name="price"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- carwash order form view -->
        <record id="carwash_order_view_form" model="ir.ui.view">
            <field name="name">carwash.order.view.form</field>
            <field name="model">carwash.order</field>
            <field name="arch" type="xml">
                <form string="Carwash Order">
                    <header>
                        <button name="action_draft" string="Draft" type="object" invisible="state not in ['confirmed', 'invoiced']"/>
                        <button name="action_confirm" string="Confirm" type="object" invisible="state != 'draft'"/>
                        <button name="action_invoice" string="Invoice" type="object" invisible="state != 'confirmed'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="partner_id"/>
                            <field name="vehicle_id" domain="[('customer_id', '=', partner_id)]"/>
                            <field name="nomor_kendaraan"/>
                            <field name="jenis_kendaraan"/>
                             <field name="product_id" domain="[('type', '=', 'service')]"/>
                            <field name="price"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- carwash order action window -->
        <record id="carwash_order_action" model="ir.actions.act_window">
            <field name="name">Carwash Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">carwash.order</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu item for carwash order -->
        <menuitem id="carwash_order_menu_act" name="Carwash Order" parent="menu_carwash_order" action="carwash_order_action" sequence="30"/>
    </data>
</odoo>

