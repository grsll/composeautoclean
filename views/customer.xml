<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <!-- cdn_customer list view -->
        <record id="cdn_customer_view_list" model="ir.ui.view">
            <field name="name">cdn.customer.view.list</field>
            <field name="model">cdn.customer</field>
            <field name="arch" type="xml">
                <list>
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="alamat"/>
                    <field name="jenis_kendaraan"/>
                </list>
            </field>
        </record>

        <!-- cdn_customer form view -->
        <record id="cdn_customer_view_form" model="ir.ui.view">
            <field name="name">cdn.customer.view.form</field>
            <field name="model">cdn.customer</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group >
                            <!-- Add your fields here -->
                            <field name="name"/>
                            <field name="no_hp"/>
                            </group>
                            <group> 
                            <field name="jenis_kendaraan"/>
                            <field name="nomor_kendaraan"/>
                            </group>
                        </group>
                        <group>
                            <field name="alamat"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- cdn_customer action window -->
        <record id="cdn_customer_action" model="ir.actions.act_window">
            <field name="name">Customer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.customer</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                
                </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="customer_menu_act" name="Customer" parent="master_data_menu_categ" action="cdn_customer_action" sequence="10"/>
    
    </data>
    

</odoo>
